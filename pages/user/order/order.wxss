.priceLeft {
  float: left;
  padding-left: 20rpx;
}

.price {
  float: right;
  font-weight: bold;
  padding-right: 20rpx;
}

.orderMenu_group {
  width: 100%;
  flex-wrap: wrap;
  background-color: #fff;
  text-align: right;
}

.orderMenu_box {
  margin: 10rpx;
  padding: 10rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 10rpx;
  display: inline-block;
  color: #f55253;
  border: 1rpx solid #f55253;
}

.cartImg {
  width: 220rpx;
  height: 220rpx;
}

.goods_number {
  margin: 15rpx;
  width: 30%;
  text-justify: auto;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  display: initial;
}

.goods_page {
  margin: 15rpx;
  width: 25%;
  border-radius: 10rpx;
  border: 1px #ccc solid;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.goodsImgBox {
  border: 1px #eee solid;
  border-radius: 10rpx;
  margin: 10rpx;
  height: 170rpx;
  width: 170rpx;
  text-align:center;
}

.goodsImgBox image {
  width: 150rpx;
  height: 150rpx;
  margin:10rpx auto;
}

.goods_colBox {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.goodsText {
  position: absolute;
  margin-left: 210rpx;
  width:540rpx;
}

.orderBg {
  background: #fff;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.step {
  width: 400rpx;
  text-align: left;
  margin: 20rpx auto;
  line-height: 40rpx;
}

.step_item {
  width: 50%;
  font-size: 30rpx;
  font-family: '微软雅黑';
  text-align: center;
  margin-top: 30rpx;
  margin-left: 2%;
  margin-right: 2%;
  margin-bottom: 5rpx;
  padding-bottom: 20rpx;
  color: #666;
}

.shipping {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  z-index: 100;
  background: #f55253;
}

.shipping button {
  color: #fff;
  border-radius: 0rpx;
  background: #f55253;
}
