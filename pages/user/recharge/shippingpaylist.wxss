.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.labText {
  color: #999;
  width: 210rpx;
  display: inline-block;
  line-height: 80rpx;
  text-align: right;
  vertical-align:middle;
}

.goods_colBox {
  margin-top: 12px;
  padding-bottom: 0rpx;
  padding-top: 0rpx;
}

.goods_colBox view.orderBar {
  line-height: 40rpx;
}

.orderBarRight {
  line-height: 80rpx;
  margin-right: 40rpx;
  float: right;
}

.line {
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  width: 700rpx;
  margin: 0rpx auto;
}

.price {
  font-size: 30rpx;
  color: #f55253;
  display: inline-block;
  font-weight: bold;
  vertical-align:middle;
}

.hardly {
  line-height: 80rpx;
}

.yundanhao {
  font-size: 38rpx;
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: middle;
  color: #f55253;
}

.total {
  height: 90rpx;
  line-height: 120rpx;
  background: #fff;
  margin-top: 25rpx;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  text-align: right;
}

.totalPrice {
  font-size: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
